# SLMakefile.inc - install include files
#?------------- pkg/doc/Makefile - install include files -------------
# DO NOT EDIT THIS FILE - USE "make reset" FROM BASE DIRECTORY OR
# EDIT THE USER FILES Makefile.control AND Makefile.user
######################################################################
ifeq ($(EMPTY),$(strip $(BASE_DIR)))
include ../*.config
endif
#
.PHONY: all clean test install help
#
VERSION := "$Id: Makefile,v 1.5 1997/12/12 20:00:33 tull Exp $"
# 
all:
clean:
#
#?make test        - Test current environment for SLM compatability.
test:
	@echo "########################################################"
	@echo "###         No IDL files should show up here:        ###"
	@echo "########################################################"
	@-egrep -l interface *.idl
	@echo "########################################################"
	@echo "###        All IDL files should show up here:        ###"
	@echo "########################################################"
	@-egrep -l struct *.idl
#
#?make install     - Install local files in $STAR_LIB/.../inc area.
install:
ifneq ($(EMPTY),$(strip $(wildcard *.h *.hh *.inc *.idl)))
	@echo "########################################################"
	@echo "###          Installing include & IDL files.         ###"
	@echo "########################################################"
	-$(INSTALL) $(strip $(wildcard *.h *.hh *.inc *.idl)) \
		$(STAR_LIB)/$(BRANCH_LEVEL)/$(BRANCH_NAME)/inc
else
	@echo "########################################################"
	@echo "###           No include files to install.           ###"
	@echo "########################################################"
endif
#
#
#?make help        - Show help for SLMakefile targets.
help:
	@$(SLM_DIR)/slm_help $(SLM_DIR)
#
Makefile: $(SLM_DIR)/SLMakefile.inc
	cp $< $@
#
