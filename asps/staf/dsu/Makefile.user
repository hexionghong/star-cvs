# Makefile.user - user customization of SLM
#? - Use this file to override SLMakefile behavior.
#####################################################  xdf2root  ########
#
ifeq ($(STAR_ARCH),sun4os5pc)
  xdf2rootMsg1 := "Making xdf2root..."
  xdf2rootExtraLib := -lnsl
else
  xdf2rootMsg1 := "xdf2root MAY NOT MAKE CORRECTLY FOR THIS ARCH  <<<<<<<<<<<<"
  xdf2rootExtraLib :=
endif
$(STAR_ARCH)/xdf2root.o:	$(BASE_DIR)/srcm/xdf2root.c
	@echo $(xdf2rootMsg1)
	@echo Compiling. ---------------------------------------------------
	cc -D$(STAR_ARCH) -I$(STAR_LIB)/$(STAR_SYS_LEVEL)/sys/inc -c \
	-o $(STAR_ARCH)/xdf2root.o \
	$(BASE_DIR)/srcm/xdf2root.c
xdf2root:	$(STAR_ARCH)/xdf2root.o
	@echo $(xdf2rootMsg1)
	@echo Linking. -----------------------------------------------------
	cc -o $(BASE_DIR)/bin/$(STAR_ARCH)/xdf2root \
	$(STAR_ARCH)/xdf2root.o \
	-L$(STAR_LIB)/$(STAR_SYS_LEVEL)/sys/lib \
	-ldsl $(xdf2rootExtraLib)
	ls -l $(BASE_DIR)/bin/$(STAR_ARCH)/xdf2root*
