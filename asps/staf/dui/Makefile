# Makefile - Makefile for ASP and PAM base directory
# DO NOT EDIT THIS FILE
########################################################################
.PHONY: all clean test show setup
#
include $(SLM_DIR)/base_v.mk
#
all: setup
	cd cdf; $(MAKE)
	cd idl; $(MAKE)
	cd inc; $(MAKE)
	cd src; $(MAKE)
	cd lib; $(MAKE)
	cd srcm; $(MAKE)
	cd bin; $(MAKE)
	cd wrk; $(MAKE)
#	cd doc; $(MAKE)
#
########################################################################
include $(SLM_DIR)/base_t.mk
-include $(BASE_DIR)/Makefile.user
#
clean:
	cd doc; $(MAKE) clean
	cd wrk; $(MAKE) clean
	cd bin; $(MAKE) clean
	cd srcm; $(MAKE) clean
	cd lib; $(MAKE) clean
	cd src; $(MAKE) clean
	cd inc; $(MAKE) clean
	cd idl; $(MAKE) clean
	cd cdf; $(MAKE) clean
	rm -f *.config
#
reset:
	$(MAKE) -f $(SLM_DIR)/reset.mk slm_reset
#
test:
	@echo $(SUBDIRS)
	@echo $(SUBMAKES)
#
show:
	@echo " ****************************** "
	@echo " ** Makefile                 ** "
	@echo " ****************************** "
	@echo " BASE_DIR = " $(BASE_DIR)
	@echo "BASE_NAME = " $(BASE_NAME)
	cd cdf; $(MAKE) show
	cd idl; $(MAKE) show
	cd inc; $(MAKE) show
	cd src; $(MAKE) show
	cd lib; $(MAKE) show
	cd srcm; $(MAKE) show
	cd bin; $(MAKE) show
	cd wrk; $(MAKE) show
	cd doc; $(MAKE) show
#
install:
	$(MAKE) -f $(SLM_DIR)/install.mk install_all
#
$(notdir $(shell pwd)).config: Makefile.control
	$(MAKE) -f $(SLM_DIR)/config.mk config
#
