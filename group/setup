#! /usr/local/bin/tcsh -f
set packages = "objy|OBJY|Objy root|ROOT parasoft|PARASOFT insure|ISURE sniff g4 cc4|CC4 cc5|CC5 Dsv kcc|KCC debug|DEBUG nodebug|NODEBUG" 
if ($#argv == 0 || $#argv > 2) then
    echo "Usage: setup package [version]"
    echo "List of packages: $packages"
    exit 0
endif
set pkg = $1; shift;
set version = 0;
if ( $#argv > 0 ) set version = $1
switch ($pkg)
    case "root":
    case "ROOT":
        #=======#
	if (-f $GROUP_DIR/rootenv.csh) then
	    if ( -x /afs/rhic/star/group/dropit) then
		setenv MANPATH         `/afs/rhic/star/group/dropit -p ${MANPATH} ROOT`
		setenv PATH            `/afs/rhic/star/group/dropit -p ${PATH} ROOT`
		setenv LD_LIBRARY_PATH `/afs/rhic/star/group/dropit -p ${LD_LIBRARY_PATH} ROOT`
	    endif 
	    if ($version != 0) setenv ROOT_LEVEL $version
	    source $GROUP_DIR/rootenv.csh
	endif
	breaksw
    case "objy":
    case "OBJY":
    case "Objy":
         #=====#
	if (`uname -s` == "SunOS" && `hostname` != "rcf.rhic.bnl.gov" && ! ${?OBJY_HOME} ) source $GROUP_DIR/ObjySetup.csh
	breaksw
    case "insure":
    case "INSURE":
    case "parasoft":
    case "PARASOFT":	
         #=====#
	if (-f $GROUP_DIR/parasoftenv.csh) source $GROUP_DIR/parasoftenv.csh
	breaksw
    case "sniff":
    case "SNIFF":	
         #=====#
	if (-f $GROUP_DIR/sniffenv.csh) source $GROUP_DIR/sniffenv.csh
	breaksw
    case "g4":
    case "G4":	
         #=====#
	if (-f $GROUP_DIR/g4env.csh) source $GROUP_DIR/G4env.csh
	breaksw
    case "cc4":
    case "CC4":	
         #=====#
	if ($?USE_CC5 != 0) unsetenv USE_CC5
        if ( -x /afs/rhic/star/group/dropit) then
          setenv PATH `/afs/rhic/star/group/dropit WS5.0`
          setenv PATH `/afs/rhic/star/group/dropit .sun4x_56_CC5`
          setenv LD_LIBRARY_PATH `/afs/rhic/star/group/dropit -p $LD_LIBRARY_PATH 5.0`
          setenv LD_LIBRARY_PATH `/afs/rhic/star/group/dropit -p $LD_LIBRARY_PATH .sun4x_56_CC5`
        endif
	setenv USE_CC4; starver $STAR_LEVEL
	breaksw
    case "cc5":
    case "CC5":	
         #=====#
	if ($?USE_CC4 != 0) unsetenv USE_CC4
        if ( -x /afs/rhic/star/group/dropit) then
          setenv PATH `/afs/rhic/star/group/dropit SUNWspro`
          setenv PATH `/afs/rhic/star/group/dropit .sun4x_56`
          setenv LD_LIBRARY_PATH `/afs/rhic/star/group/dropit -p $LD_LIBRARY_PATH SUNWspro`
          setenv LD_LIBRARY_PATH `/afs/rhic/star/group/dropit -p $LD_LIBRARY_PATH .sun4x_56`
        endif
	starver $STAR_LEVEL
	breaksw
    case "Dsv":
    case "dsv":
    case "DSV":
	if (-r /afs/rhic/star/packages/Dsv/Dsvenv.csh) source /afs/rhic/star/packages/Dsv/Dsvenv.csh
      breaksw
    case "KCC":
    case "kcc":
      setenv USE_KCC;  starver $STAR_LEVEL
      breaksw
    case "nodebug":
    case "NODEBUG":
      setenv NODEBUG yes; starver $STAR_LEVEL
      breaksw
    case "debug":
    case "DEBUG":
      unsetenv NODEBUG yes; 
      setenv PATH `dropit BIN`
      setenv LD_LIBRARY_PATH `dropit -p $LD_LIBRARY_PATH LIB`
      starver $STAR_LEVEL
      breaksw
    default:
	echo "Setup for $pkg is not defined"
      breaksw
endsw
